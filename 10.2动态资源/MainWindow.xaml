<Window x:Class="_10._2动态资源.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10._2动态资源"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <TextBlock x:Key="res1" Text="AAAAAA"></TextBlock>
        <TextBlock x:Key="res2" Text="AAAAAA"></TextBlock>
    </Window.Resources>
    <StackPanel>
        <Button Margin="5,5,5,0" Content="{StaticResource res1}"></Button>
        <Button Margin="5,5,5,0" Content="{DynamicResource res2}"></Button>
        <Button Margin="5,5,5,0" Content="Update" Click="Button_Click"></Button>
    </StackPanel>
</Window>
