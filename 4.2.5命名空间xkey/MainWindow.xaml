<Window x:Class="_4._2._5命名空间xkey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4._2._5命名空间xkey"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--资源文件里添加字符串资源， 然后在界面就是可以使用key来使用了。-->
    <Window.Resources>
        <sys:String x:Key="strkey">ABC</sys:String>
    </Window.Resources>
    <Grid>
        <Button Width="120" Height="50" Content="{StaticResource strkey}"></Button>
    </Grid>
    
</Window>
